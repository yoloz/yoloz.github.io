<div id="briefList">
	<ul>
		<%
		var counter=0, total = site.posts.length,limit=total;
		if(limit>4) limit=4;
		var indexes =[limit];
		while(counter < limit){
			var index = Math.floor(Math.random()*total);
			indexes[counter] = index;
			counter++;
		}
		site.posts.forEach((post,index,array)=> { 
			if(counter >= -1 && indexes.includes(index)){
		%>
		<li class="brief-li">
			<span class="brief-date"><%- date(post.date, "YYYY-MM-DD") %></span>
			<a class="brief-read" href="<%- config.root %><%- post.path %>"> 阅读全文 </span>
				<a class="brief-title"
					href="<%- config.root %><%- post.path %>"><%- post.slug.split("/")[post.slug.split("/").length-1] %></a>
				<div class="brief-digest">
					<%- post.more.replace(/<\/?.+?\/?>/g, "").substring(0, 100) %>
					...
				</div>
		</li>
		<% 
			counter--;
			}});
		%>
	</ul>
</div>